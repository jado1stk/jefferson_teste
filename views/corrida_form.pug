extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
    label(for='cor_motorista') Motorista:
    input#cor_motorista.form-control(type='text', placeholder='Motorista' name='title' required='true' value=(undefined===cor ? '' : cor.cor_motorista) )
    label(for='cor_passageiro') Passageiro:
    input#cor_passageiro.form-control(type='text', placeholder='Passageiro' name='title' required='true' value=(undefined===cor ? '' : cor.cor_passageiro) )
    div.form-group
    label(for='cor_valor') Valor:
    input#cor_valor.form-control(type='text', placeholder='Valor' name='title' required='true' value=(undefined===cor ? '' : cor.cor_valor) )
    button.btn.btn-primary(type='submit') Submit        
  if errors 
    ul
      for error in errors
        li!= error.msg